{
  "name": "email-template",
  "version": "1.0.0",
  "description": "A basic project template to send emails using Node.js",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev-server": "concurrently npm:dev-server:*",
    "dev-server:compile": "rm -rf ./dist/server/ && rm -rf ./dist/shared/ && tsc -w",
    "dev-server:run": "nodemon"
  },
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "watch": [
      "src/server/"
    ],
    "exec": "node --loader ts-node/esm src/server/main.ts --emit",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/socket.io": "^3.0.2",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemailer": "^6.8.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/cookie-parser": "^1.4.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.10",
    "@types/nodemailer": "^6.4.6",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "socket.io-client": "^4.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
